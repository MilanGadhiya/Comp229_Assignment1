<!-- form handling -->
<form action="/api/contactlist" class="mb-5" method="POST" id="add_contact">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" placeholder="Enter name" required>
      </div>
    <div class="form-group">
      <label for="exampleInputEmail1">Email address</label>
      <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" required>
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
      <label>Contact Number</label>
      <input type="tel" class="form-control" name="number" placeholder="123-456-7891" required>
      <!-- pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" -->
    </div>
    <div class="form-group">
        <button type="submit" class="btn bgstandardcolor text-light">Save</button>
    </div>
  </form>
