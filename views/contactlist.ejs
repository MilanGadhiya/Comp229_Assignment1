<!-- include header -->
<%- include('partials/header', {title:'Contact List'}); -%>
<%- include('partials/top_nav') %>
<!-- /include header -->


    <!-- Main Site -->
    <main id="site-main">
        <div class="container my-5">
            <div class="box-nav d-flex justify-between mb-3 standardcolor">
                <a href="/add-contact" class="border-shadow">
                    <span class="standardcolor">New Contact <i class="fas fa-user"></i></span>
                </a>
            </div>

            <!-- form handling -->
            <form action="/" method="POST">
                <table class="table table-hover text-center">
                    <thead class="bgstandardcolor">
                      <tr class="text-light">
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Number</th>
                        <th scope="col">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                        <%- include('partials/_show') %>
                    </tbody>
                </table>
            </form>
        </div>
    </main>
<!-- /Main Site -->


<!-- include footer -->
<%- include('partials/bottom_nav'); -%>
<%- include('partials/footer'); -%>
<!-- /include footer -->